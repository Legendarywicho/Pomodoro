<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luis_santiago.flagquizapp.ui.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <include layout="@layout/action_app_bar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Timer defaults"
            android:fontFamily="sans-serif"
            android:layout_margin="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/backgroundline"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="25dp"
                android:layout_width="35dp"
                android:src="@drawable/icons8_alarm_clock_48"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="20dp"
                android:layout_height="35dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@android:color/darker_gray"
                    android:layout_height="wrap_content"
                    android:text="Timer for countdown "
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="0dp"
                        android:layout_marginStart="-10dp"
                        android:layout_weight="5"
                        android:progress="25"
                        android:max="30"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/text_seek"
                        android:layout_width="0dp"
                        android:layout_weight=".9"
                        android:text="0"
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:layout_height="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/backgroundline"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:text="Vibrate"/>

            <Switch
                android:id="@+id/switch_settings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:checked="true"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
